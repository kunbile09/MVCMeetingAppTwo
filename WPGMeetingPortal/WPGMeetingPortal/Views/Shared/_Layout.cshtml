<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - IC-Start Scheduler</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Application name", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav pull-left">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    @if (User.Identity.IsAuthenticated)
                    {

                        if (User.IsInRole("E"))
                        {
                            <li>@Html.ActionLink("Schedules", "Index", "Schedules")</li>

                        }
                        <li>@Html.ActionLink("Events", "Index", "Events")</li>


                        <li>@Html.ActionLink("LogOut", "LogOut", "Security")</li>

                    }
                    else
                    {
                        <li>@Html.ActionLink("Login", "Login", "Security")</li>
                    }

                </ul>
                
                <ul class="nav navbar-nav pull-right">
                    @if (User.Identity.IsAuthenticated)
                    {
                    <li class="pull-right"><a href="#"><b>Welcome</b> @User.Identity.Name</a></li>
                    }
                    
                </ul>
            </div>
        </div>
    </div>
    <div class="container-fluid body-content" style="margin-top: 20px;">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Meeting Scheduling System</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
